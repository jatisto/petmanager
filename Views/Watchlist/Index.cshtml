@model List<Watchlist>

<h2>My Watchlists</h2>
<hr>
<div class="row">
    @{
        if(Model.Count<=0){
            <p>No pets found</p>
        } else {
            foreach(Watchlist wl in Model){
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            @wl.Pet.Name
                        </div>
                        <div class="panel-body">
                            <div class="col-md-4 image-container">
                                <div class="btn btn-success image-button">
                                    <img class = "image" src="~/images/@wl.Pet.ImageUrl" onError="event.preventDefault(); this.src='/images/cat.png';"/>                                    
                                </div>
                            </div>
                            <div class="col-md-8">
                                <p>Age: @wl.Pet.Age</p>
                                <p>Location: @wl.Pet.Location</p>
                                <p>Owner: @wl.Pet.Owner.Name</p>
                                <p>Owner Email: @wl.Pet.Owner.Email</p>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <a asp-action="Remove" 
                                asp-controller="Watchlist" 
                                asp-route-Id="@wl.Id" 
                                class="btn btn-primary">
                                Remove
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    }
    </div>
